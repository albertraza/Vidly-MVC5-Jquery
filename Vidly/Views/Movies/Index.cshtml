@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@{ 
    if(!Model.Any())
    {
        <text>We dont have movies registered yet.</text>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movies</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var movie in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(movie.Name, "MovieDetails", new { id = movie.Id })</td>
                        <td>@movie.Genre.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

