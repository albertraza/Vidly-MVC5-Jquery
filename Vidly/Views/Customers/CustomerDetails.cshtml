@model Vidly.Models.Customer
@{
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li><b>Membership Type: </b>@Model.MembershipType.Name</li>
    @if (!string.IsNullOrEmpty(Model.BirthDate))
    {
        <li><b>Birthdate: </b>@Model.BirthDate</li>
    }
</ul>

