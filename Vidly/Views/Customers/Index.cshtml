@model Vidly.ViewModels.RandomMoviesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<div>

    @{ 
        if (Model.Customers.Count == 0)
        {
            <text>We dont have customers registered yet.</text>
        }
        else
        {
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "CustomerDetails", new { id = customer.Id })</td>
                </tr>
            }
        </tbody>
    </table>
            }
        }
</div>

